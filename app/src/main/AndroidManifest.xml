<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tosita.jplayer">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.JPlayer">
        <activity
                android:name=".ui.MainActivity3"
                android:label="@string/title_activity_main3"
                android:theme="@style/Theme.JPlayer.NoActionBar">
        </activity>
        <activity
                android:name=".ui.MainActivity2"
                android:label="@string/title_activity_main2"
                android:theme="@style/Theme.JPlayer.NoActionBar">
        </activity>
        <activity
                android:name=".ui.MainActivity"
                android:label="@string/title_activity_main"
                android:theme="@style/Theme.JPlayer.NoActionBar">
        </activity>
        <activity
                android:name=".ui.SettingsActivity"
                android:label="@string/title_activity_settings">
        </activity>
        <activity
                android:name=".ui.ItemListActivity"
                android:label="@string/title_item_list"
                android:theme="@style/Theme.JPlayer.NoActionBar">
        </activity>
        <activity
                android:name=".ui.ItemDetailActivity"
                android:label="@string/title_item_detail"
                android:parentActivityName=".ui.ItemListActivity"
                android:theme="@style/Theme.JPlayer.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.tosita.jplayer.ui.ItemListActivity"/>
        </activity>
        <activity
                android:name=".ui.login.LoginActivity"
                android:label="@string/title_activity_login">
        </activity>
        <activity
                android:name=".FullscreenActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/title_activity_fullscreen"
                android:theme="@style/Theme.JPlayer.Fullscreen">
        </activity>
        <activity
                android:name=".ScrollingActivity"
                android:label="@string/title_activity_scrolling"
                android:theme="@style/Theme.JPlayer.NoActionBar">
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>